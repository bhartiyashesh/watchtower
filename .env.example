# Ring Doorbell Credentials
RING_USERNAME=your_ring_email@example.com
RING_PASSWORD=your_ring_password

# SwitchBot API (get from SwitchBot app -> Profile -> Preferences -> Developer Options)
SWITCHBOT_TOKEN=your_switchbot_open_token
SWITCHBOT_SECRET=your_switchbot_secret_key
SWITCHBOT_DEVICE_ID=your_lock_device_id

# Face Recognition
FACE_MATCH_TOLERANCE=0.5
KNOWN_FACES_DIR=./known_faces

# Polling interval in seconds
POLL_INTERVAL=5

# Cooldown after unlock (seconds) - prevents repeated unlocks
UNLOCK_COOLDOWN=60

# Storage (Phase 1: Data Foundation)
DB_PATH=./events.db
THUMBNAILS_DIR=./thumbnails
# Production (Raspberry Pi): point to USB SSD
# DB_PATH=/mnt/usb/events.db
# THUMBNAILS_DIR=/mnt/usb/thumbnails

# YOLO Object Detection
# Use "yolo11n.pt" for development (PyTorch format)
# Use "yolo11n_ncnn_model" for Raspberry Pi 4 production (NCNN format)
YOLO_MODEL_PATH=yolo11n.pt
